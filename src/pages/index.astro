---
import GlobalLayout from "../layouts/GlobalLayout.astro";
import Home from "./Home.svelte";
const allPosts = await Astro.glob('../pages/blog/posts/*/*.md');
const recentPosts = allPosts.slice(0,1).sort((a, b) => Date.parse(b.frontmatter.pubDate) - Date.parse(a.frontmatter.pubDate)).filter(a => !a.frontmatter.draft);
---

<GlobalLayout> 	
	<Home recentPosts={recentPosts} client:idle></Home>
</GlobalLayout>
